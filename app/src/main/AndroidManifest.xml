<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arnawa.owan.simpanpinjamnew">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeII">
        <activity
            android:name=".Splash"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".PilihKoperasi"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimpanPinjam"
            android:configChanges="orientation"
            android:label="@string/title_activity_simpan_pinjam"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Simpin"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Daftar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".SimpanPinjamBayarPinjaman"
            android:configChanges="orientation"
            android:label="Bayar Pinjaman"
            android:parentActivityName=".Simpin"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeIII"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".SimpanPinjamDataPengajuan"
            android:configChanges="orientation"
            android:label="Data Pengajuan"
            android:parentActivityName=".Simpin"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeIII" />
        <activity
            android:name=".SimpanPinjamLaporanPembayaran"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimpanPinjamLaporanPinjaman"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimpanPinjamLaporanSimpanan"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimpanPinjamPengajuanBaru"
            android:configChanges="orientation"
            android:label="Pengajuan Pinjaman"
            android:parentActivityName=".Simpin"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeIII"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".SimpanPinjamTambahSimpanan"
            android:configChanges="orientation"
            android:label="Tambah Simpanan"
            android:parentActivityName=".Simpin"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeIII"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".SimulasiPinjaman"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".RekeningKoperasi"></activity>
    </application>

</manifest>