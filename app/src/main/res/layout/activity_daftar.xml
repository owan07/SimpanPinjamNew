<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Daftar"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/arnawaappslogo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nama_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_kotakputih">

        <EditText
            android:id="@+id/et_namaAnggota"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/newakunusername"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="ID Anggota"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_light" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_text_input_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_kotakputih">

        <EditText
            android:id="@+id/et_no_hp_atau_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/newakunemail"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="ID Anggota"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_light" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/hp_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text_input_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_kotakputih"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_hp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/newakunhp"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="No. Handhpone"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_light" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hp_text_input_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_kotakputih"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/newakunpassword"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_light" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/konfirmasi_password_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_text_input_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_kotakputih"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_konfirmasipassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/newakunpassword"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="Konfirmasi Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_light" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/koperasitujuan_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/konfirmasi_password_text_input_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_kotakputih"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_koperasitujuan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/newkoperasi"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="Koperasi Yang Dituju"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_light" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_lupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/koperasitujuan_text_input_layout"
        android:layout_alignEnd="@+id/email_text_input_layout"
        android:fontFamily="@font/poppins"
        android:text="@string/lupapassword"
        android:textColor="@android:color/background_light"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_lupaPassword"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_kotakputih"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="@color/BluePrimer"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/poppins_light" />

    <TextView
        android:id="@+id/tv_udhPunyaAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/poppins"
        android:text="Sudah Punya Akun? Login Sekarang"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
