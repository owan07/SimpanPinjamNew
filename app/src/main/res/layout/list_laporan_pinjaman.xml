<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/bg_kotakputihabuabu">

    <TextView
        android:id="@+id/tv_tglpembayaran_lppinjaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="20 Agustus 2018 - 14:00"
        android:textColor="@color/BlackPrimer"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView231"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tglpembayaran_lppinjaman"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Lama Angsuran:"
        android:textColor="@color/BlackPrimer"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_lamaAngsuran"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/textView231"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/poppins"
        android:text="12 Bulan"
        android:textColor="@color/BluePrimer"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView126"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Jumlah Pinjaman"
        android:textColor="@color/BlackPrimer"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_jumlahPinjaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView126"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="16dp"
        android:text="Rp. 1.021.500"
        android:textColor="@color/GreenPrimer"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_status_lppinjaman"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_lamaAngsuran"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/GreenTransparant"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Status: Sudah Lunas"
        android:textColor="@color/GreenPrimer"
        android:textSize="12sp" />

</RelativeLayout>