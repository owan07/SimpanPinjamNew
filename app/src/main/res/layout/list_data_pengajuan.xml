<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/bg_kotakputihabuabu">

    <TextView
        android:id="@+id/tv_pembatesHorizontal"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_tglInput"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tv_pembatesHorizontal"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/tv_pembatesHorizontal"
        android:background="@color/GraySkunder"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="20 Mar 2018 - 16.00"
        android:textColor="@color/BlackPrimer"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvstatus"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tv_pembatesHorizontal"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/tv_pembatesHorizontal"
        android:background="@color/GreenSekunder"
        android:fontFamily="@font/poppins"
        android:gravity="right|center_vertical"
        android:text="Status:"
        android:textColor="@color/BlackPrimer"
        android:textSize="10sp" />
</RelativeLayout>